				<File Id="DevExpress.Data.v16.1.dll"          Source="..\LersBot\bin\Release\DevExpress.Data.v16.1.dll"/>
				<File Id="DevExpress.Pdf.v16.1.Core.dll"      Source="..\LersBot\bin\Release\DevExpress.Pdf.v16.1.Core.dll"/>
