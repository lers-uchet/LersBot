			<Component Id="BotService" Guid="{6B691B8E-687B-4C04-B8DA-409595AE002B}">
				<File Id="LersBotExe"                 Source="..\LersBot\bin\Release\LersBot.exe" KeyPath="yes"/>
				<File Id="LersBotExeConfig"           Source="..\LersBot\bin\Release\LersBot.exe.config"/>
